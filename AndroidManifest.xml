<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.example.bloa"
      android:versionCode="2"
      android:versionName="2.0">
    <uses-sdk
        android:minSdkVersion="4"
        android:targetSdkVersion="17"
    />
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:allowBackup="false"
        android:name="App" android:theme="@style/AppTheme">
        <provider
            android:name=".data.BloaProvider"
            android:authorities="com.example.bloa"
            android:exported="false"
        />
        <activity android:name="com.example.bloa.activities.BloaActivity"
            android:label="@string/app_name"
        >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            </activity>
        <activity
            android:name=".activities.OAuthActivity"
            android:launchMode="singleTask"
        >
            <!-- TODO: Put your callback components into the data element below -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="bloa-app" android:host="twitt" />
            </intent-filter>
        </activity>
    </application>
</manifest>
